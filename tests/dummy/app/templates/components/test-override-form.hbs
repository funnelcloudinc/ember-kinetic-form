<h3 class="ui dividing header">{{title}}</h3>

<div class="ui very relaxed divided items">
  {{yield}}
</div>

<div class="actions">
  <div class="ui huge two buttons">
    <button class="ui inverted red button" type="button" {{action "saveAsIncomplete"}}>
      <i class="warning icon"></i>incomplete
    </button>
    <button type="submit" class="ui inverted green button" disabled={{isInvalid}}>
      <i class="checkmark icon"></i>complete
    </button>
  </div>
</div>
