{{#if showErrors}}
  {{component errorComponent errors=changeset.errors}}
{{/if}}

{{#if decoratedDefinition.isPending}}
  {{component loadingComponent}}
{{else}}
  {{#component formComponent changeset=changeset title=decoratedDefinition.schema.title isInvalid=changeset.isInvalid onSubmit=(action "submit")}}
    {{#each properties as |field|}}
      {{component field.componentName field=field error=(get changeset.error field.key) value=(get changeset field.key) update=(action "updateProperty" field.key)}}
    {{/each}}
  {{/component}}
{{/if}}
