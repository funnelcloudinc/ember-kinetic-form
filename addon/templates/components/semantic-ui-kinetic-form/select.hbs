<div class="middle aligned content">
  <div class="field {{if @error 'error'}} {{if @field.required 'required'}}">
    <label>{{@field.title}}</label>
    <UiDropdown @class="selection" @selected={{@value}} @onChange={{action @update}} as |execute mapper|>
      <div class="default text">{{@field.title}}</div>
      <i class="dropdown icon"></i>
      <div class="menu">
        <div class="item" data-value>--</div>
        {{#each @field.options as |option|}}
          <div class="item" data-value={{map-value mapper option}}>
            {{option}}
          </div>
        {{/each}}
      </div>
    </UiDropdown>
  </div>
</div>

