<label>
  {{field.title}}
  {{#if field.required}}*{{/if}}
</label>
<select onchange={{action update value="target.value"}}>
  {{#if showPrompt}}
    <option value="" selected={{hasNoValue}}>--</option>
  {{/if}}
  {{#each options as |opt|}}
    <option
        value={{opt.value}}
        selected={{opt.selected}}>
      {{opt.value}}
    </option>
  {{/each}}
</select>
